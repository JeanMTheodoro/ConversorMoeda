<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:padding="15dp"
            android:inputType="textPersonName"
            android:hint="@string/Editext"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/bntclear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:padding="15dp"
            android:background="@drawable/button_clear_shape"
            android:text="@string/nameButton"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/usa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_coin_dollar_finance_icon_125510"/>


        <ImageButton
            android:id="@+id/china"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_yuan_coin_finance_icon_125513"
            android:layout_marginEnd="60dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/englad"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_pound_coin_finance_icon_125511"
            android:layout_marginStart="60dp"/>



        <ImageButton
            android:id="@+id/euro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/button_shape"
            android:layout_marginEnd="60dp"
            android:text="Euro"
            android:src="@drawable/ic_euro_coin_finance_icon_125512"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:text=" "/>


</LinearLayout>